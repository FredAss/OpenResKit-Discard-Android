<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_1"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/inspectionListFrameLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/inspection_fragment"
            android:name="htw.bui.openreskit.discard.InspectionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </fragment>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/inspectionFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>